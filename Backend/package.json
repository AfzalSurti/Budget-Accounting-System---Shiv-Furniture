{
  "name": "budget-accounting-backend",
  "version": "1.0.0",
  "description": "Budget Accounting System backend for Shiv Furniture",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "generate": "prisma generate",
    "build": "prisma generate && tsc -b && node ./scripts/copy-prisma-generated.mjs",
    "dev": "node ./scripts/ensure-login-id.mjs && prisma generate && tsc -b && node ./scripts/copy-prisma-generated.mjs && node ./dist/server.js",
    "start": "node ./dist/server.js",
    "seed": "npm run build && node ./scripts/seed.mjs",
    "reset-admin": "npm run build && node ./scripts/reset-admin-password.mjs",
    "db:fix-loginid": "node ./scripts/ensure-login-id.mjs",
    "lint": "echo \"no lint configured\"",
    "test": "vitest run"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "joi": "^17.11.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "morgan": "^1.10.0",
    "pdfkit": "^0.16.0",
    "pg": "^8.18.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.1",
    "@types/pdfkit": "^0.17.4",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "prisma": "^7.3.0",
    "supertest": "^6.3.4",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
